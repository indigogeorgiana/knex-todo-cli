#!/usr/bin/env node

module.exports = {
  addTodo: addTodo,
  completeTodo: completeTodo,
  deleteTodo: deleteTodo,
  getAll: getAll,
  searchTodos: searchTodos,
  updateTodo: updateTodo
}

var config = require('./knexfile').development
var db = require('knex')(config)

var cmd = process.argv[2]
var note = process.argv[3]

switch (cmd) {
  case 'add':
    addTodo(note, db)
      .then(refreshTodos)
      .then(listTodos)
      .catch(logError)
      .finally(closeDB)
    break

  case 'list':
    getAll(db)
      .then(listTodos)
      .catch(logError)
      .finally(closeDB)
    break

  case 'done':
    completeTodo(note, db)
      .then(refreshTodos)
      .then(listTodos)
      .catch(logError)
      .finally(closeDB)

  case 'delete':
    deleteTodo(note, db)
      .then(refreshTodos)
      .then(listTodos)
      .catch(logError)
      .finally(closeDB)
    break

  case 'update':
    updateTodo(note, process.argv[4], db)
      .then(refreshTodos)
      .then(listTodos)
      .catch(logError)
      .finally(closeDB)
    break

  case 'search':
    searchTodos(note, db)
      .then(listTodos)
      .catch(logError)
      .finally(closeDB)
    break

  default:
    console.log('No matched cases')
    closeDB()
    break
}

function listTodos (todos) {
  todos.forEach(function (todo) {
    var completed = todo.completed ? ' (completed)' : ''
    console.info(todo.id + ': ' + todo.task + completed)
  })
}

function logError (err) {
  console.error('Uh oh!', err)
}

function refreshTodos () {
  return getAll(db)
}

function getAll (connection) {
  return connection('todos').select()
}

function addTodo (task, connection) {
  return connection('todos')
    .insert({
      task: task
    })
}

function completeTodo (id, connection) {
  return connection('todos')
    .where('id', id)
    .update({ completed: true })
}

function deleteTodo (id, connection) {
  return connection('todos')
    .where('id', id)
    .delete()
}

function updateTodo (id, task, connection) {
  return connection('todos')
    .where('id', id)
    .update({ task: task })
}

function searchTodos (search, connection) {
  return connection('todos')
    .where('task', 'like', '%' + search + '%')
    .select()
}

function closeDB () {
  db.destroy()
}

